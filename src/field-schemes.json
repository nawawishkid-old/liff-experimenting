{
  "text": [
    {
      "validators": [],
      "attributes": {
        "type": "hidden",
        "name": "message_type",
        "value": "text",
        "required": true
      }
    },
    {
      "validators": [
        { "message": "Text length must not exceed 2000 characters" }
      ],
      "attributes": {
        "type": "text",
        "name": "text",
        "value": "Hello! This message is sent from LIFF!",
        "required": true,
        "placeholder": "Your message goes here...",
        "maxlength": 2000
      },
      "type": "textarea",
      "label": "Text"
    }
  ],
  "image": [
    {
      "validators": [],
      "attributes": {
        "type": "hidden",
        "name": "message_type",
        "value": "image",
        "required": true
      }
    },
    {
      "validators": [{ "message": "Image URL scheme must be HTTPS" }],
      "attributes": {
        "type": "url",
        "name": "originalContentUrl",
        "value": null,
        "required": true,
        "maxlength": 1000
      },
      "label": "Original Content URL",
      "description": "Image URL. Must be .jpeg file with 1024x1024 px maximum resolution and under 1Mb in size."
    },
    {
      "validators": [{ "message": "Image URL scheme must be HTTPS" }],
      "attributes": {
        "type": "url",
        "name": "previewImageUrl",
        "value": null,
        "required": true,
        "maxlength": 1000
      },
      "label": "Preview Image URL",
      "description": "Preview image URL. <p>Must be .jpeg file with 240x240 px maximum resolution and under 1Mb in size.</p>"
    }
  ],
  "location": [
    {
      "validators": [],
      "attributes": {
        "type": "hidden",
        "name": "message_type",
        "value": "location",
        "required": true
      }
    },
    {
      "validators": [
        { "message": "Text length must not exceed 100 characters" }
      ],
      "attributes": {
        "type": "text",
        "name": "title",
        "value": null,
        "required": true,
        "placeholder": "Location title",
        "maxlength": 100
      },
      "label": "Title"
    },
    {
      "validators": [
        { "message": "Text length must not exceed 100 characters" }
      ],
      "attributes": {
        "type": "text",
        "name": "address",
        "value": null,
        "required": true,
        "placeholder": "Your address here...",
        "maxlength": 100
      },
      "label": "Address"
    },
    {
      "validators": [
        { "message": "Invalid latitude value. Valid range is -90 - 90." }
      ],
      "attributes": {
        "type": "number",
        "name": "latitude",
        "value": null,
        "required": true,
        "placeholder": "e.g. -18.41242039402342",
        "max": 90,
        "min": -90,
        "step": 0.00001
      },
      "label": "Latitude"
    },
    {
      "validators": [
        { "message": "Invalid longitude value. Valid range is -180 - 180." }
      ],
      "attributes": {
        "type": "number",
        "name": "longitude",
        "value": null,
        "required": true,
        "placeholder": "e.g. 173.41242039402342",
        "max": 180,
        "min": -180,
        "step": 0.00001
      },
      "label": "Longitude"
    }
  ]
}
